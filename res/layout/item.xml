<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="96px" android:layout_height="144px">

	<ImageButton android:id="@+id/btn" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:background="@drawable/blank_selector" />

	<ImageView android:id="@+id/icon" android:layout_width="64px"
		android:layout_height="64px" android:src="@drawable/icon"
		android:clickable="false" android:layout_gravity="center_horizontal"
		android:layout_marginTop="25px" android:scaleType="fitCenter" />

	<TextView android:id="@+id/text" android:text="Test"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="center" android:clickable="false"
		android:cursorVisible="false" android:layout_gravity="bottom"
		android:layout_marginBottom="25px" android:textColor="#eeeeee"
		android:textStyle="bold" />
</FrameLayout>